<h1>Radcheck list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Attribute</th>
            <th>Op</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('radcheck_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.attribute }}</td>
            <td>{{ entity.op }}</td>
            <td>{{ entity.value }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('radcheck_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('radcheck_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('radcheck_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
